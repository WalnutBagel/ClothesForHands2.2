<Application x:Class="ClothesForHands2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClothesForHands2"
             StartupUri="Windows/WindowMaterialList.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="TxbBigStyle">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TxbDefaultStyle">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TbDefaultStyle">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFB3F4E9"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="CbDefaultStyle">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Application.Resources>
</Application>
